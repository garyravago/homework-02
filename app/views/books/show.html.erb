<h1><%= @book.title %></h1>

<table>
  <tr>
    <td><%= "Author".pluralize(@authors) %></td>
    <td>
      <ul>
      <% @authors.each do |author| %>

        <li>
          <%= link_to author do %>
            <%= author.first_name %> <%= author.last_name %>
          <% end %>
        </li>
      <% end %>
      </ul>
    </td>
  </tr>
  <tr>
    <td>Genre</td>
    <td><%= @book.genre %></td>
  </tr>
  <tr>
    <td>Classification</td>
    <td><%= @book.classification%></td>
  </tr>    
  <tr>
    <td>Category</td>
    <td><%= @book.category %></td>
  </tr>
  <tr>
    <td>Year</td>
    <td><%= @book.year %></td>
  </tr>
</table>
<br />
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Delete', book_path(@book), 
    method: :delete, 
    data: {confirm: 'Are you sure you want to delete this book?' } %><br /><br />
<%= link_to 'Home', root_path %>