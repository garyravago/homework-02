<h1>Books</h1>
<br />

<% @books.each do |book| %>
<h2><%= book.title %></h2>  
  <table>
    <tr>
      <td>Author</td>
      <td><%= book.author %></td>
    </tr>
    <tr>
      <td>Genre</td>
      <td><%= book.genre %></td>
    </tr>
    <tr>
      <td>Classification</td>
      <td><%= book.classification%></td>
    </tr>    
    <tr>
      <td>Category</td>
      <td><%= book.category %></td>
    </tr>
    <tr>
      <td>Year</td>
      <td><%= book.year %></td>
    </tr>
  </table>
  <hr />
<% end %>